import java.util.*;

public class SearchingDSA {

    // 1️⃣ Linear Search
    static void linearSearch(int[] arr, int key) {
        int index = -1;
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] == key) {
                index = i;
                break;
            }
        }
        System.out.println("Linear Search Index: " + index);
    }

    // 2️⃣ Binary Search (Iterative)
    static void binarySearchIterative(int[] arr, int key) {
        int low = 0, high = arr.length - 1;
        int index = -1;

        while (low <= high) {
            int mid = (low + high) / 2;
            if (arr[mid] == key) {
                index = mid;
                break;
            } else if (arr[mid] < key) {
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }
        System.out.println("Binary Search (Iterative) Index: " + index);
    }

    // 3️⃣ Binary Search (Recursive)
    static int binarySearchRecursive(int[] arr, int low, int high, int key) {
        if (low > high) return -1;

        int mid = (low + high) / 2;
        if (arr[mid] == key) return mid;
        else if (arr[mid] < key)
            return binarySearchRecursive(arr, mid + 1, high, key);
        else
            return binarySearchRecursive(arr, low, mid - 1, key);
    }

    // 4️⃣ First Occurrence of an Element
    static int firstOccurrence(int[] arr, int key) {
        int low = 0, high = arr.length - 1, res = -1;
        while (low <= high) {
            int mid = (low + high) / 2;
            if (arr[mid] == key) {
                res = mid;
                high = mid - 1;
            } else if (arr[mid] < key) {
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }
        return res;
    }

    // 5️⃣ Last Occurrence of an Element
    static int lastOccurrence(int[] arr, int key) {
        int low = 0, high = arr.length - 1, res = -1;
        while (low <= high) {
            int mid = (low + high) / 2;
            if (arr[mid] == key) {
                res = mid;
                low = mid + 1;
            } else if (arr[mid] < key) {
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }
        return res;
    }

    // 6️⃣ Count Occurrences of an Element
    static void countOccurrences(int[] arr, int key) {
        int first = firstOccurrence(arr, key);
        int last = lastOccurrence(arr, key);
        int count = (first == -1) ? 0 : (last - first + 1);
        System.out.println("Count of " + key + ": " + count);
    }

    // 7️⃣ Find Element in Infinite Sorted Array (Logic)
    static int searchInfiniteArray(int[] arr, int key) {
        int low = 0, high = 1;

        while (high < arr.length && arr[high] < key) {
            low = high;
            high = high * 2;
        }

        high = Math.min(high, arr.length - 1);
        return Arrays.binarySearch(arr, low, high + 1, key);
    }

    // MAIN METHOD
    public static void main(String[] args) {
        int[] arr = {2, 4, 4, 4, 6, 8, 10};

        linearSearch(arr, 6);
        binarySearchIterative(arr, 8);

        int index = binarySearchRecursive(arr, 0, arr.length - 1, 10);
        System.out.println("Binary Search (Recursive) Index: " + index);

        System.out.println("First Occurrence of 4: " + firstOccurrence(arr, 4));
        System.out.println("Last Occurrence of 4: " + lastOccurrence(arr, 4));

        countOccurrences(arr, 4);

        System.out.println("Infinite Array Search Index: " +
                searchInfiniteArray(arr, 6));
    }
}
